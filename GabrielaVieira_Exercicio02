/*Recebe três números, e enquanto a soma for diferente de 48 ou 71, continue recebendo infinitamente
Autora: Gabriela
Data: 30/05/2023 
 */

 import java.util.Scanner;
public class GabrielaVieira_Exercicio02 {
    public static void main (String []args) {
        Scanner leitor = new Scanner(System.in);

        //Criando e inincializando as variáveis
        int num = 0;
        int nois = 0;
        int nes = 0;
        int total = 0;

        while(total != 48 && total != 71) {
            //Lê as variáveis
            System.out.println ("Digite o primeiro número");
            num = leitor.nextInt();
    
            System.out.println("Digite o 2ºn número");
            nois = leitor.nextInt();
    
            System.out.println("Digite o 3ºn número");
            nes = leitor.nextInt();
    
            //Faça a soma
            total = num + nois + nes;
        }

        System.out.println("A soma é igual a 48 ou 71.");
        leitor.close();            
    }
        
}
