/*Pega um texto e verifique se a quantidad de caracteres desse texto for maior que 10.
 Autora: Gabriela
Data: 30/05/2023
 */
import java.util.Scanner;
public class GabrielaVieira_Exercicio04 {
    public static void main(String[] args) {
        Scanner leitor = new Scanner(System.in);

        //Criando variável
        String texto;

        //Usando o laço de repetição DO WHILE e lendo a varíavel iniciaremos
        do {
            System.out.print("Digite um texto: ");
            texto = leitor.nextLine();

            if (texto.length() <= 10) {
                System.out.println("Você digitou uma palavrinha.");
            }
        } while (texto.length() <= 10);

        System.out.println("Você digitou um palavrão!");
        leitor.close();
    }
}
