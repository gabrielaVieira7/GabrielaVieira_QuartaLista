import java.util.Scanner;

public class ExemploPrograma {

    public static void main(String[] args) {
        // 1 - Somar números cujo quadrado seja divisível por 4
        int somaQuadradosDivisiveisPor4 = 0;
        for (int i = 1; i <= 100; i++) {
            if ((i * i) % 4 == 0) {
                somaQuadradosDivisiveisPor4 += i;
            }
        }
        System.out.println("Soma dos números cujo quadrado é divisível por 4: " + somaQuadradosDivisiveisPor4);

        // 2 - Receber três números até que a soma seja 48 ou 71
        Scanner scanner = new Scanner(System.in);
        int soma = 0;
        while (soma != 48 && soma != 71) {
            System.out.print("Digite três números: ");
            int num1 = scanner.nextInt();
            int num2 = scanner.nextInt();
            int num3 = scanner.nextInt();
            soma = num1 + num2 + num3;
        }
        System.out.println("A soma é igual a 48 ou 71.");

        // 3 - Gerar 50 números inteiros e 50 números reais e somar ambos
        int somaInteiros = 0;
        double somaReais = 0;
        for (int i = 0; i < 50; i++) {
            int numeroInteiro = (int) (Math.random() * 100);
            double numeroReal = Math.random() * 100;
            somaInteiros += numeroInteiro;
            somaReais += numeroReal;
        }
        System.out.println("Soma dos 50 números inteiros: " + somaInteiros);
        System.out.println("Soma dos 50 números reais: " + somaReais);
        if (somaInteiros > somaReais) {
            System.out.println("A soma dos inteiros é maior.");
        } else if (somaInteiros < somaReais) {
            System.out.println("A soma dos reais é maior.");
        } else {
            System.out.println("As somas dos inteiros e reais são iguais.");
        }

        // 4 - Verificar se o texto possui mais de 10 caracteres
        System.out.print("Digite um texto: ");
        String texto = scanner.next();
        if (texto.length() > 10) {
            System.out.println("Você digitou um palavrão!");
        } else {
            System.out.println("Você digitou uma palavrinha.");
        }

        // 5 - Contagem regressiva
        for (int i = 10; i >= 0; i--) {
            System.out.println(i);
        }
        System.out.println("Fim");

        // 6 - Somar 10 valores inteiros positivos e mostrar sua raiz quadrada
        int somaPositivos = 0;
        int valoresLidos = 0;
        while (valoresLidos < 10) {
            System.out.print("Digite um valor inteiro: ");
            int valor = scanner.nextInt();
            if (valor > 0) {
                somaPositivos += valor;
                valoresLidos++;
            }
        }
        double raizQuadrada = Math.sqrt(somaPositivos);
        System.out.println("A raiz quadrada da soma dos valores positivos é: " + raiz
