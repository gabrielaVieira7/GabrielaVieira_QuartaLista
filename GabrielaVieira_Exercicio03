/*Gere 50 números inteiros e reais e some eles em uma variáve
Autora: Gabriela
Data: 30/05/2023
 */
import java.util.Random;
public class GabrielaVieira_Exercicio03 {
    public static void main(String[] args) {
        

        // Criando e Inicializando as varíaveis dos 50 números inteiros    
        int inteiros = 0;        

        Random random = new Random();
        for (int i = 0; i < 50; i++) {
            int val = random.nextInt();
            inteiros += val;
        }      

        // Criando e Inicializando as variáveis dos 50 números reais
        double reais = 0.0;
        for (int i = 0; i < 50; i++) {
            double val2 = random.nextDouble();
            reais += val2;

        }

        
        // Deixar as somas à mostra e ver qual é a maior

        System.out.println("Soma dos números inteiros: " + inteiros);

        System.out.println("Soma dos números reais: " + reais);

        
        //Mostrar condições
        if (inteiros > reais) {

            System.out.println("A soma dos inteiros é maior.");

        } else if (reais > inteiros) {

            System.out.println("A soma dos reais é maior.");

        } else {

            System.out.println("As duas somas são iguais.");

        }

    }

}
